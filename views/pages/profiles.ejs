<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head.ejs %>
    <title>
        Profiles
        | <%= pkg.name %></title>
    <meta name="description" content="<%= pkg.description %>">
</head>

<body class="page" data-selector="status" data-status="loading"  itemscope itemtype="http://schema.org/Organization">
<% include ../partials/masthead.ejs %>

<main class="page__body page__body--centered">

    <% for(profile in content.profiles) { %>
    <article class="page__article">
        <div class="content">
            <div class="content__body">
                <section class="content__section content__section--centered">
                    <div class="title">
                        <h1 class="title__headline">
                            Profiles
                        </h1>

                        <a class="networks__link networks__link--text"
                           title="<%= content.profiles[profile].name.first %> <%= content.profiles[profile].name.last %>"
                           href="/profile/<%= encodeURI(content.profiles[profile].name.first + " " + content.profiles[profile].name.last) %>">
                            <%= content.profiles[profile].name.first %> <%= content.profiles[profile].name.last %>
                        </a>
                    </div>

                </section>
                <aside class="content__aside">
                    <div class="vertical-text"><%= pkg.author %></div>
                </aside>
            </div>
            <footer class="content__footer">
                <% include ../partials/footer.ejs %>
            </footer>
        </div>
    </article>
    <% } %>

    <aside class="page__aside">
        <div class="vertical-text2"><%= pkg.description %></div>
    </aside>
</main>
<% include ../partials/scripts.ejs %>
</body>
</html>